<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">20px</item>
    </style>

    <style name="style_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textSize">28px</item>
    </style>

    <style name="style_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:layout_marginBottom">5px</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:background">@drawable/etxt_bg</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.Design"></style>

    <style name="Base.Theme.Design" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary 定义 ActionBar 的背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark 定义状态栏的背景色 -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">#ffffff</item>
        <!-- colorAccent 为 colorControlActivated 的默认值，该值用户显示控件的高亮状态 -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88px</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32px</item>
    </style>

    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@android:color/white</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

</resources>
